<div class="row">
  <div class="col-xs-12">
    <h1 class="page-header">
      Editar <small>Produto</small>
    </h1>
  </div>
</div>

<% if @product.errors.full_messages.any? %>
  <div class="alert alert-danger alert-dismissable">
    <% @product.errors.full_messages.each do |msg| %>
      <p>
        <i class="fa fa-warning"></i>  <%= msg %>
      </p>
    <% end %>
  </div>
<% end %>

<%= form_for @product, url: {action: "update"} do |f| %>

  <div class="row">
    <div class="col-xs-12">
      <div class="form-group <%= 'has-error has-feedback' if @product.errors[:name].present? %>">
        <label>Nome*</label>
        <%= f.text_field :name, class: "form-control" %>
        <% if @product.errors[:name].present? %>
          <span class="form-control-feedback">
            <i class="fa fa-warning"></i>
          </span>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="form-group <%= 'has-error' if @product.errors[:category_id].present? %>">
        <label>Categoria*</label>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {:include_blank => "Selecione uma Categoria"}, {class: "form-control"}) %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="form-group <%= 'has-error has-feedback' if @product.errors[:description].present? %>">
        <label>Descrição</label>
        <%= f.text_area :description, class: "form-control" %>
        <% if @product.errors[:description].present? %>
          <span class="form-control-feedback">
            <i class="fa fa-warning"></i>
          </span>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="form-group <%= 'has-error has-feedback' if @product.errors[:link].present? %>">
        <label>Link para Venda</label>
        <%= f.text_field :link, class: "form-control" %>
        <% if @product.errors[:link].present? %>
          <span class="form-control-feedback">
            <i class="fa fa-warning"></i>
          </span>
        <% end %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-xs-6">
      <div class="form-group <%= 'has-error' if @product.errors[:product_images].present? %>">
        <label>Imagens*</label>
        <%= f.file_field :images, multiple: true, accept: 'image/png,image/gif,image/jpeg', class: 'custom-file-input' %>
      </div>
    </div>
    <div class="col-xs-6 text-right m-t-20">
      <div class="form-group">
        <%= f.submit "Alterar", class: "btn btn-success" %>
        <%= link_to "Cancelar", root_url, class: "btn btn-link" %>
      </div>
    </div>
  </div>

<% end %>
