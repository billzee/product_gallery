<% @products.each do |product| %>
  <div class="row">
    <div class="col-xs-6 bgm-black m-t-20">
      <div class="row" id="lightgallery">
        <% product.images.each_with_index do |img, idx| %>
          <% if idx == 0 %>
            <a href="<%= img %>" class="col-xs-12 text-center p-0">
              <%= image_tag img, class: 'thumb-big' %>
            </a>
          <% else %>
            <a href="<%= img %>" class="col-xs-2 text-center p-0">
              <%= image_tag img, class: 'thumb-small' %>
            </a>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="row">
        <div class="col-md-8">
          <h3><%= product.name %></h3>
        </div>
        <% if admin_signed_in? %>
          <div class="col-md-4 text-right">
            <%= link_to product, class: 'btn btn-primary m-t-20' do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to product, class: 'btn btn-danger m-t-20' do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </div>
        <% end %>
      </div>
      <p class="break-word">
        <%= product.description %>
      </p>
      <%= link_to product.link, target: '_blank', class: 'btn btn-success btn-lg' do %>
        Comprar <i class="fa fa-shopping-cart"></i>
      <% end %>
    </div>
  </div>
  <hr>
<% end %>

<div class="row text-center">
  <div class="col-lg-12">
    <ul class="pagination">
      <li>
        <a href="#">&laquo;</a>
      </li>
      <li class="active">
        <a href="#">1</a>
      </li>
      <li>
        <a href="#">2</a>
      </li>
      <li>
        <a href="#">3</a>
      </li>
      <li>
        <a href="#">4</a>
      </li>
      <li>
        <a href="#">5</a>
      </li>
      <li>
        <a href="#">&raquo;</a>
      </li>
    </ul>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $("#lightgallery").lightGallery({
      thumbnail:true
    });
  });
</script>
